@model Order
<h3 style="margin-left: 480px">Оформление заказа</h3>
<div class="row" style="margin-left: 513px">
    <form asp-action="Checkout" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name"></label>
            <div class="col-md-10" style="padding: 0.375rem 0px">
                <input asp-for="Name" class="form-control" style="" />
                <span asp-validation-for="Name" class="texxt-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <div class="col-md-10" style="padding: 0.375rem 0px">
                <input asp-for="Surname" class="form-control" style="" />
                <span asp-validation-for="Surname" class="texxt-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Adress"></label>
            <div class="col-md-10" style="padding: 0.375rem 0px">
                <input asp-for="Adress" class="form-control" style="" />
                <span asp-validation-for="Adress" class="texxt-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label>
            <div class="col-md-10" style="padding: 0.375rem 0px">
                <input asp-for="Phone" class="form-control" style="" />
                <span asp-validation-for="Phone" class="texxt-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="col-md-10" style="padding: 0.375rem 0px">
                <input asp-for="Email" class="form-control" style="" />
                <span asp-validation-for="Email" class="texxt-danger"></span>
            </div>
        </div>
        <input class="btn btn-success" type="submit" value="Завершить заказ" style="padding-left: 48px;text-align: center;padding: .375rem 2.75rem" />
    </form>
</div>